<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/like_huge_padding"
    android:paddingStart="@dimen/like_huge_padding"
    android:paddingRight="@dimen/like_huge_padding"
    android:paddingEnd="@dimen/like_huge_padding"
    android:paddingTop="@dimen/more_than_big_padding"
    android:paddingBottom="@dimen/more_than_big_padding"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/file_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/file_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_action_navigation_more_vert_black"/>

</RelativeLayout>