<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/huge_padding"
    android:paddingStart="@dimen/huge_padding"
    android:paddingRight="@dimen/huge_padding"
    android:paddingEnd="@dimen/huge_padding"
    android:orientation="vertical">

    <EditText
        android:id="@+id/suggestion_input"
        style="@style/DialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DialogContent"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/get_feedback"
        android:layout_marginTop="@dimen/middle_margin"
        android:id="@+id/suggestion_checkbox" />

    <EditText
        android:id="@+id/suggestion_email"
        style="@style/DialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:visibility="gone"/>

</LinearLayout>