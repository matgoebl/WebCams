<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/not_so_huge_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="@string/presentation"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/middle_margin"
                    android:layout_marginBottom="@dimen/big_margin"
                    android:layout_marginLeft="@dimen/middle_margin"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginRight="@dimen/middle_margin"
                    android:layout_marginEnd="@dimen/middle_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/help_preview_0"
                    android:onClick="openMainVideo"
                    android:contentDescription="@string/image"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middle_margin"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="@string/manually_adding" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/middle_margin"
                    android:layout_marginBottom="@dimen/big_margin"
                    android:layout_marginLeft="@dimen/middle_margin"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginRight="@dimen/middle_margin"
                    android:layout_marginEnd="@dimen/middle_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/help_preview_1"
                    android:onClick="openManuallyAdding"
                    android:contentDescription="@string/image"
                    android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>