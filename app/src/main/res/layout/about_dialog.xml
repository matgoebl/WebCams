<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/about_author_container"
        style="@style/libraries_container"
        android:layout_marginTop="@dimen/seven_margin"
        android:paddingLeft="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding">

        <LinearLayout
            style="@style/inner_container"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/about_image"
                style="@style/about_image" />
        </LinearLayout>

        <LinearLayout
            style="@style/inner_container"
            android:orientation="vertical">

            <TextView
                style="@style/libraries_title"
                android:text="@string/author"/>

            <TextView
                style="@style/libraries_author_licence_and_version"
                android:text="@string/yet_another_view_tomas_valenta" />
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/view_divider2"/>

    <LinearLayout
        android:id="@+id/about_contribute_container"
        style="@style/libraries_container"
        android:paddingLeft="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding">

        <LinearLayout
            style="@style/inner_container"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:layout_marginRight="@dimen/middle_margin"
                android:layout_marginEnd="@dimen/middle_margin"
                android:src="@drawable/github" />
        </LinearLayout>

        <LinearLayout
            style="@style/inner_container"
            android:orientation="vertical">

            <TextView
                style="@style/libraries_title"
                android:text="@string/contribute"/>

            <TextView
                style="@style/libraries_author_licence_and_version"
                android:text="@string/contribute_summary" />
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/view_divider2"/>

    <LinearLayout
        android:id="@+id/about_community_container"
        style="@style/libraries_container"
        android:paddingLeft="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding">

        <LinearLayout
            style="@style/inner_container"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_marginRight="@dimen/middle_margin"
                android:layout_marginEnd="@dimen/middle_margin"
                android:src="@drawable/google_plus" />
        </LinearLayout>

        <LinearLayout
            style="@style/inner_container"
            android:orientation="vertical">

            <TextView
                style="@style/libraries_title"
                android:text="@string/google_plus_beta_community"/>

            <TextView
                style="@style/libraries_author_licence_and_version"
                android:text="@string/google_plus_beta_community_summary" />
        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/view_divider2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/special_thanks"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/about_tomas_borov"
            style="@style/translators_container">

            <LinearLayout
                style="@style/inner_container"
                android:orientation="horizontal">

                <cz.yetanotherview.webcamviewer.app.helper.RoundedImageView
                    style="@style/about_image2"
                    android:src="@drawable/tomas_borov"/>
            </LinearLayout>

            <LinearLayout
                style="@style/inner_container"
                android:orientation="vertical">

                <TextView
                    style="@style/translators_name"
                    android:text="@string/tomas_borov"/>

                <TextView
                    style="@style/translators_language"
                    android:text="@string/beta_tester"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_radek_matouch"
            style="@style/translators_container">

            <LinearLayout
                style="@style/inner_container"
                android:orientation="horizontal">

                <cz.yetanotherview.webcamviewer.app.helper.RoundedImageView
                    style="@style/about_image2"
                    android:src="@drawable/radek_matouch"/>
            </LinearLayout>

            <LinearLayout
                style="@style/inner_container"
                android:orientation="vertical">

                <TextView
                    style="@style/translators_name"
                    android:text="@string/radek_matouch"/>

                <TextView
                    style="@style/translators_language"
                    android:text="@string/code_helper"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/twelve_padding"
        android:paddingBottom="@dimen/twelve_padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingStart="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingEnd="@dimen/big_padding">

            <TextView
                style="@style/libraries_title"
                android:text="@string/also_huge_thanks"
                android:gravity="center" />

    </LinearLayout>

</LinearLayout>