<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:id="@+id/googleDrawer" android:background="@android:color/white"
    android:clickable="true">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="188dp"
        android:background="@drawable/nav_drawer_cover" android:id="@+id/navigationHeader">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/categoryHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/navigationHeader"
        android:background="@color/primary">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_file_folder"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image" />

        </RelativeLayout>
        <View style="@style/drawer_separator"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_action_small_arrow_down"
                android:drawableStart="@drawable/ic_action_small_arrow_down"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/webcam_category"
                android:layout_marginLeft="@dimen/main_small_margin"
                android:layout_marginStart="@dimen/main_small_margin"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <View style="@style/drawer_separator"/>
        <RelativeLayout
            android:id="@+id/add_category_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/row_selector"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_add"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image" />

        </RelativeLayout>

    </LinearLayout>

    <View android:layout_width="match_parent" android:background="#CCCCCC"
        android:layout_height="1dp" android:id="@+id/separator"
        android:layout_below="@id/categoryHeader"/>

    <View android:layout_width="match_parent" android:background="@android:color/white"
        android:layout_height="8dp" android:id="@+id/space"
        android:layout_below="@id/separator"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/drawerList"
        android:layout_width="match_parent" android:clickable="true" android:scrollbars="vertical"
        android:layout_height="match_parent" android:background="@color/white"
        android:layout_below="@id/space" />

</RelativeLayout>