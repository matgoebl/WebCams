<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cz.yetanotherview.webcamviewer.app.helper.TintableImageView
        android:id="@+id/categoryIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/twelve_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/five_margin"
        android:layout_marginStart="@dimen/five_margin"
        android:layout_marginRight="@dimen/five_margin"
        android:layout_marginEnd="@dimen/five_margin"
        android:layout_centerVertical="true"
        app:tint="@color/drawer_item_icon"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/categoryIcon"
        android:layout_toEndOf="@id/categoryIcon"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/ultra_margin"
        android:layout_marginEnd="@dimen/ultra_margin"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/drawer_item_text" />

</merge>