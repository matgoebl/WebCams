<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customized only for v21 and up... -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_bg</item>
        <item name="selectableItemBackground">@drawable/ripple</item>
        <item name="android:selectableItemBackground">@drawable/ripple</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/very_dark_grey</item>

        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextStyle">@color/white</item>
    </style>

    <style name="TranslucentStatusBar" parent="AppTheme">
        <!-- Customized only for v21 and up... -->
    </style>

    <style name="AppCompatFullScreen" parent="AppTheme.Base">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SeekBar" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/green_scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/green_scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/green_scrubber_control_selector</item>
    </style>

    <style name="MainCardViewGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_middle_margin</item>
        <item name="android:layout_marginStart">@dimen/main_middle_margin</item>
        <item name="android:layout_marginRight">@dimen/main_middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_middle_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainCardViewSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/main_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_padding</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginRight">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainCardViewList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="MainPlayOverlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/ic_action_av_play_circle_fill</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EditImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_action_navigation_more_vert</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ErrorImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/large_margin</item>
        <item name="android:layout_marginRight">@dimen/large_margin</item>
        <item name="android:src">@drawable/error</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">@dimen/huge_padding</item>
        <item name="android:paddingEnd">@dimen/huge_padding</item>
    </style>

    <style name="CardNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/custom_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ProgressBarHorizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/progress_padding</item>
        <item name="android:layout_marginStart">@dimen/progress_padding</item>
        <item name="android:layout_marginRight">@dimen/progress_padding</item>
        <item name="android:layout_marginEnd">@dimen/progress_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="DialogContent">
        <item name="android:textSize">@dimen/md_content_textsize</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorHint">@color/hint_gray</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/black</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/very_dark_grey</item>
    </style>

    <style name="drawer_separator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white_separator</item>
        <item name="android:layout_marginTop">@dimen/seven_margin</item>
        <item name="android:layout_marginBottom">@dimen/seven_margin</item>
    </style>

    <style name="libraries_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/row_selector</item>
        <item name="android:paddingTop">@dimen/twelve_padding</item>
        <item name="android:paddingBottom">@dimen/twelve_padding</item>
    </style>

    <style name="inner_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="libraries_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/settings_libraries</item>
        <item name="android:paddingRight">@dimen/more_than_big_padding</item>
        <item name="android:paddingEnd">@dimen/more_than_big_padding</item>
        <item name="android:paddingTop">@dimen/more_than_big_padding</item>
        <item name="android:paddingBottom">@dimen/more_than_big_padding</item>
    </style>

    <style name="libraries_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="libraries_author_licence_and_version">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="translators_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/row_selector</item>
        <item name="android:paddingTop">@dimen/twelve_padding</item>
        <item name="android:paddingBottom">@dimen/twelve_padding</item>
    </style>

    <style name="translators_flag">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/middle_padding</item>
        <item name="android:paddingBottom">@dimen/middle_padding</item>
    </style>

    <style name="translators_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="translators_language">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="about_image">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginRight">@dimen/middle_margin</item>
    </style>

    <style name="about_image2">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">@dimen/tiny_margin</item>
        <item name="android:layout_marginEnd">@dimen/tiny_margin</item>
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:layout_marginBottom">@dimen/tiny_margin</item>
    </style>

    <style name="help_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/middle_margin</item>
    </style>

    <style name="help_card_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/middle_padding</item>
    </style>

    <style name="help_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="help_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/five_margin</item>
        <item name="android:layout_marginStart">@dimen/five_margin</item>
        <item name="android:layout_marginBottom">@dimen/five_margin</item>
    </style>

    <style name="link_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/another_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="maps_zoom_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
